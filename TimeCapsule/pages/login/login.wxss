/* pages/login/login.wxss */
.login-box {
  height: 1000rpx;
  width: 100%;
}
.login {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
}
.username,.password {
  transform: translateX(5%);
  width: 90%;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  height: 60rpx;
  padding-left: 10rpx;
  margin-bottom: 20rpx;
}
.username {
  margin-top: 350rpx;
}
.btn-area {
  width: 92%;
  display: flex;
  transform: translateX(5%);
}
.btn-area button {
  flex: 1;
  width: 40%;
  margin-right: 20rpx;
}
.mask {
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.1);
}
.mask.close {
  display: none;
}
.Mask_btn {
  position: absolute;
  top: 210rpx;
  width: 50%;
  left: 50%;
  transform: translateX(-50%);
}
.toast {
  position: absolute;
  width: 400rpx;
  height: 300rpx;
  background-color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}
.toast-text {
  padding: 20rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: bold;
}