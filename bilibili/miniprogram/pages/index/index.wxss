/* miniprogram/pages/index/index.wxss */

.content {
  width: 100%;
  height: 100%;
}
.header {
  width: 100%;
  height: 140rpx;
  background-color: #f25c81;
}
.header-left {
  float: left;
  border-radius: 50%;
  background-color: #fff;
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.header-center .header-input {
  width: 320rpx;
  float: left;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 25px;
  margin-top: 40rpx;
  margin-left: 20rpx;
  padding-left: 50rpx;
  clear: right
}
.header-center .header-sousuo_icon image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50rpx;
  left: 150rpx;
}
.header-right {
  display: flex;
}
.header-right .header-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.header-right .header-icon image {
  width: 50rpx;
  height: 50rpx;
}
.header-swiper-tab {
  width: 100%;
  height: 80rpx;
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.header-swiper-tab .tab-item {
  margin-top: 10rpx;
  flex: 1;
  height: 30rpx;
  text-align: center;
  font-weight: lighter;
  font-size: 28rpx;
  /* 如何修改底部边框的长度 */
  /* 解决方法，再加一个div */
}
.header-swiper-tab .on {
  color: #f25c81;
  border-bottom: 2px solid #f25c81;
  padding-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}