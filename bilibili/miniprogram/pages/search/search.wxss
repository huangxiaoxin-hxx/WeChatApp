/* miniprogram/pages/search/search.wxss */
.content {
  width: 100%;
  height: 100%;
}
.header {
  width: 100%;
  height: 100rpx;
  background-color: #f25c81;
  display: flex
}
.header-left{
  flex: 7;
  margin-left: 20rpx;
}
.header-left-icon image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 40rpx;
}
.header-left input {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 25px;
  margin-top: 20rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  color: #aaa;
}
.header-left .on {
  color: #000;
}
.header-right{
  flex: 1;
  margin-left: 50rpx;
  margin-top: 25rpx;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
}
.hot-title{
  font-size: 12px;
  margin-top: 10rpx;
  display: flex;
}
.hot-title-left{
  flex:1;
  text-align: left;
  margin-left: 20rpx;
  font-weight: lighter;
  clear: both;
}
.hot-title-right {
  flex:1;
  text-align: right;
  margin-right: 20rpx;
  color: #aaa;
  font-weight: lighter;
}
.hot-content {
  width: 100%;
  height: 120rpx;
  background-color: #ccc;
  overflow: hidden;
}